---
import Layout from '../layouts/Layout.astro'
import ColorCard from '../components/ColorCard.astro'
---

<Layout title='Welcome to Astro.'>
  <main>
    <h1 class='mb-5 mt-10 text-center text-6xl font-bold'>
      Color palette generator<br />with <span class='text-gradient'>Astro</span>
    </h1>
    <p class='mb-5 text-center'>
      <span class='text-gradient'>A project to test it out</span>
    </p>
    <ul role='list' class='flex h-36 justify-between'>
      <ColorCard hex='#264653' position='1' />
      <ColorCard hex='#2a9d8f' position='2' />
      <ColorCard hex='#e9c46a' position='3' />
      <ColorCard hex='#f4a261' position='4' />
      <ColorCard hex='#e76f51' position='5' />
    </ul>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  .text-gradient {
    background-image: linear-gradient(45deg, rgb(136, 58, 234), rgb(224, 204, 250) 30%, white 60%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
</style>
