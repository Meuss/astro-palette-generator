---
import ColorCardClient from './ColorCardClient.tsx';
interface Props {
  hex: string
  position: number
}

const { hex, position } = Astro.props
---

<ColorCardClient hex={hex} position={position} client:load />

<style lang='scss'>
  .color-card {
    letter-spacing: 1px;
    cursor: pointer;
    transition: flex 0.5s cubic-bezier(0.075, 0.82, 0.165, 1);
    &:hover {
      flex: 5;
    }
  }
</style>
